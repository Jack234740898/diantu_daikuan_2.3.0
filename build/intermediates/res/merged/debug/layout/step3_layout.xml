<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.sxjs.diantu_daikuan"
    android:id="@+id/step3_layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/circle_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp" >

        <com.ui.view.RoundProgressBar
            android:id="@+id/roundProgressBar2"
            android:layout_width="245dip"
            android:layout_height="245dip"
            android:layout_centerHorizontal="true"
            android_custom:max="180"
            android_custom:roundColor="#ffe2dd"
            android_custom:roundProgressColor="#ea554a"
            android_custom:roundWidth="10dip"
            android_custom:textColor="#9A32CD"
            android_custom:textIsDisplayable="false"
            android_custom:textSize="18sp" />

        <LinearLayout
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_progress_shape"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已通知"
                android:textColor="#fa6459"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/notice_num_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fa6459"
                android:textSize="70sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位信贷经理"
                android:textColor="#fa6459"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/notice_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:text="00:00"
                android:textColor="#fa6459"
                android:textSize="@dimen/desc_size" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/notice_num_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="0"
            android:textColor="#fa6459"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="位信贷经理正在抢单,您可以和他们聊聊天"
            android:textColor="#333333"
            android:textSize="13sp"
            android:id="@+id/notice_text2" />
    </LinearLayout>

    <TextView
        android:id="@+id/go_see_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_bg_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_orange_red_bg"
        android:gravity="center"
        android:text="去看看"
        android:textColor="@color/white"
        android:textSize="@dimen/desc_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="如果当前没有信贷经理响应,你也可以稍后在个人中心查看进度"
        android:textColor="#888888"
        android:textSize="9sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_bg_height" />

</LinearLayout>