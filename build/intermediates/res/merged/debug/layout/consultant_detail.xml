<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color" 
    android:id="@+id/root">

    <com.ui.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:id="@+id/body">

            <include layout="@layout/consultant_detail_top_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/fangkuai_grayline_whitebg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="地区"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/area_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="机构"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/company_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/bottom_margin"
                        android:paddingLeft="@dimen/left_margin"
                        android:paddingTop="@dimen/top_margin"
                        android:text="个人描述"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/person_desc_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/bottom_margin"
                        android:paddingRight="@dimen/right_margin"
                        android:paddingTop="@dimen/top_margin"
                        android:text="用心做事，真诚待人"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="累计成交"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/deal_volume_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0单"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" 
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:visibility="gone">

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="放款总额"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/total_lending_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0万元"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="平均放款时间"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <TextView
                        android:id="@+id/lending_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0天"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:background="@color/line_color" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>
    </com.ui.view.MyScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fangkuai_grayline_graybg" >

        <TextView
            android:id="@+id/call_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/corner_call_phone_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingTop="@dimen/top_margin"
            android:text="给他打电话"
            android:textColor="@color/orange_red_text"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:id="@+id/send_msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/corner_send_msg_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingTop="@dimen/top_margin"
            android:text="给他发消息"
            android:textColor="@color/white"
            android:textSize="@dimen/desc_size" />
    </LinearLayout>

</RelativeLayout>