<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    android:orientation="vertical" >

    <include layout="@layout/headview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:text="确定"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/desc_size" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@id/confirm_text"
            android:background="#f2f3f0"
            android:gravity="center_vertical"
            android:hint="找不到?请手工输入您的学校名称"
            android:paddingLeft="10dp"
            android:textColor="@color/title_text_color"
            android:textColorHint="#cccdca"
            android:textSize="@dimen/desc_size" 
            android:id="@+id/school_name_edit"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/black"
        android:listSelector="@null"
        android:scrollbars="none" 
        android:divider="@null"/>

</LinearLayout>