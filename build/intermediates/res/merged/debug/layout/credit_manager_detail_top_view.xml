<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xindai_manager_top_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_white_shape" >

            <com.ui.view.CircularImage
                android:id="@+id/head_img"
                android:layout_width="@dimen/head_big_size"
                android:layout_height="@dimen/head_big_size"
                android:layout_margin="1.5dp"
                android:background="@drawable/default_head" />

            <TextView
                android:id="@+id/head_text"
                android:layout_width="@dimen/head_big_size"
                android:layout_height="@dimen/head_big_size"
                android:layout_margin="1.5dp"
                android:background="@drawable/circle_white_shape"
                android:gravity="center"
                android:textColor="@color/orange_red_text"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="张晓东"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:id="@+id/shiming_verify_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/verify_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/verify_selected" />

            <TextView
                android:id="@+id/verify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="已实名认证"
                android:textColor="@color/yellow_color"
                android:textSize="@dimen/title_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/company_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="招商银行北京支行"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:id="@+id/horizon_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/back_white_down" />

</RelativeLayout>