<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    android:orientation="vertical" >

    <include layout="@layout/reg_headview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="城市"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <EditText
                android:id="@+id/city_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="30dp"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size"
                android:textCursorDrawable="@drawable/icon_cursor"
                android:hint="请输入" />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fangkuai_grayline_whitebg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="小区"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <EditText
                android:id="@+id/area_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="30dp"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" 
                android:textCursorDrawable="@drawable/icon_cursor"
                android:hint="请输入"/>
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="朝向"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <EditText
                android:id="@+id/dircetion_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="30dp"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" 
                android:textCursorDrawable="@drawable/icon_cursor"
                android:hint="请输入"/>
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fangkuai_grayline_whitebg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="面积"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <EditText
                android:id="@+id/square_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="30dp"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" 
                android:inputType="number"
                android:textCursorDrawable="@drawable/icon_cursor"
                android:hint="请输入"/>
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="楼层"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <EditText
                android:id="@+id/floors_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="30dp"
                android:minWidth="150dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size"
                android:inputType="number"
                android:textCursorDrawable="@drawable/icon_cursor"
                android:hint="请输入" />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou" 
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/query_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/corner_login_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="查询报价"
        android:textColor="@color/white"
        android:textSize="@dimen/desc_size" />

    <TextView
        android:id="@+id/query_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text=""
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/desc_size" />
</LinearLayout>