<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    android:orientation="vertical" >

    <include layout="@layout/headview_righttext" />

    <com.ui.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="城市"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/city_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/city_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择城市"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="姓名"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入姓名"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColor="@color/apply_loan_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="年龄"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/age_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/age_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:maxLength="2"
                            android:text="请选择年龄"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="性别"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/sex_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/sex_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="请选择性别"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="社保缴纳"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/society_security_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/society_security_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择社保缴纳情况"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="信用记录"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/credit_record_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/credit_record_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择信用记录"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="负债"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/debet_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/debet_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择负债情况"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="抵押"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/title_size" />

                    <RelativeLayout
                        android:id="@+id/diya_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/diya_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择抵押情况"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/title_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.ui.view.MyScrollView>

</LinearLayout>