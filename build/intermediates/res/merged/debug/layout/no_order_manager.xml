<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_vertical"
    android:background="@color/page_color"
    android:id="@+id/no_order_manager_root">
    
    <ImageView
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tuzi_white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/notice_num_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="没有信贷经理抢单,"
            android:textColor="#333333"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="了解原因?"
            android:textColor="#349EE0"
            android:textSize="@dimen/desc_size"
            android:id="@+id/notice_text2" />
    </LinearLayout>

    <TextView
        android:id="@+id/contact_customer_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_bg_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_blue_bg"
        android:gravity="center"
        android:text="联系客服"
        android:textColor="@color/white"
        android:textSize="@dimen/desc_size" />
</LinearLayout>
