<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fangkuai_grayline_whitebg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="最近放款"
            android:textSize="@dimen/navigate_text_size" 
            android:textColor="@color/manager_detail_navi_text_color"
            android:id="@+id/textview1"/>

        <ImageView
            android:id="@+id/imgview1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange_red_bg" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/divider_line_height"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="客户评论(0)"
            android:textSize="@dimen/navigate_text_size" 
            android:textColor="@color/manager_detail_navi_text_color"
            android:id="@+id/textview2"/>

        <ImageView
            android:id="@+id/imgview2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange_red_bg" 
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>