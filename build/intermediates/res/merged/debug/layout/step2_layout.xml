<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/step2_layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="贷款金额(元)"
                    android:textColor="@color/apply_loan_name_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/daikuan_salary_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@null"
                        android:hint="请输入贷款金额"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textColor="@color/apply_loan_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="贷款期限(月)"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/jiekuan_term_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@null"
                        android:hint="请输入贷款期限"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/apply_loan_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="贷款类型"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/jiekuan_type_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/jiekuan_type_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="请选择贷款类型"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="城市"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/city_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/city_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择城市"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/right_margin"
            android:paddingLeft="@dimen/left_margin"
            android:paddingTop="20dp"
            android:text="基本信息"
            android:textColor="@color/apply_loan_name_color"
            android:textSize="@dimen/desc_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFE0AA"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/apply_loan_warn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:text="正确信息有助于提高通过率,信息不真可能会影响信用"
                android:textColor="#FF8527"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="姓名"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/apply_loan_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="年龄"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/age_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/age_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请选择年龄"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="性别"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/sex_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/sex_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请选择性别"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="工作单位"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/company_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入公司名称"
                        android:textColor="@color/apply_loan_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/income_name_text"
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="月打卡工资(元)"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/income_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/income_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:id="@+id/income_cash_ll">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_bg_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/income_cash_name_text"
                        android:layout_width="@dimen/apply_loan_form_left_width"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="月现金收入(元)"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/desc_size" />

                    <RelativeLayout
                        android:id="@+id/income_cash_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/income_cash_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="请选择"
                            android:textColor="@color/apply_loan_hint_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/desc_size" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/choose_img" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/society_security_img_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/society_security_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="社保缴纳"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/society_security_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/society_security_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择社保缴纳情况"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="信用记录"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/credit_record_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/credit_record_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择信用记录"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="负债"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/debet_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/debet_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择负债情况"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="资产"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/diya_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/diya_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="请选择资产情况"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_height"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_bg_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/apply_loan_form_left_width"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="手机号公开"
                    android:textColor="@color/desc_text_color"
                    android:textSize="@dimen/desc_size" />

                <RelativeLayout
                    android:id="@+id/public_phone_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/public_phone_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="公开,抢单经理能看到"
                        android:textColor="@color/apply_loan_hint_value_color"
                        android:textColorHint="@color/apply_loan_hint_value_color"
                        android:textSize="@dimen/desc_size" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@drawable/choose_img" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/verify_phone_code_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/page_color"
                    android:paddingBottom="@dimen/right_margin"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingTop="20dp"
                    android:text="验证信息"
                    android:textColor="@color/apply_loan_name_color"
                    android:textSize="@dimen/desc_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fangkuai_grayline_whitebg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_bg_height" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/left_margin"
                            android:text="手机号码"
                            android:textColor="@color/desc_text_color"
                            android:textSize="@dimen/desc_size" />

                        <EditText
                            android:id="@+id/phone_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入您的11电话号码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/apply_loan_value_color"
                            android:textColorHint="@color/apply_loan_hint_value_color"
                            android:textSize="@dimen/desc_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_line_height"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:layout_marginRight="@dimen/right_margin"
                        android:background="@color/line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_bg_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/left_margin"
                            android:text="短信验证码"
                            android:textColor="@color/desc_text_color"
                            android:textSize="@dimen/desc_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_bg_height" >

                            <TextView
                                android:id="@+id/verify_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/right_margin"
                                android:background="@drawable/corner_green_bg"
                                android:padding="5dp"
                                android:text="获取验证码"
                                android:textColor="@color/white"
                                android:textSize="@dimen/desc_size" />

                            <EditText
                                android:id="@+id/verify_code_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/verify_text"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请输入手机验证码"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/apply_loan_value_color"
                                android:textColorHint="@color/apply_loan_hint_value_color"
                                android:textSize="@dimen/desc_size" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/page_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fangkuai_grayline_whitebg" >

        <TextView
            android:id="@+id/commit_apply_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_bg_height"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_orange_red_bg"
            android:gravity="center"
            android:text="提交申请"
            android:textColor="@color/white"
            android:textSize="@dimen/desc_size" />
    </LinearLayout>

</RelativeLayout>