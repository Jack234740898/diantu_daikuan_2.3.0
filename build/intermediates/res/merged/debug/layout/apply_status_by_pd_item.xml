<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/page_color" >

        <LinearLayout
            android:id="@+id/apply_status_right_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="11dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/left_sanjiao" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/divider_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/line_color"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/divider_line"
                    android:paddingBottom="8dp" 
                    android:id="@+id/title_rl">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="2015-09-01 13:05"
                        android:textColor="@color/time_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/time_text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="提交申请成功"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/desc_size" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/divider_line"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:text="您的资质不合要求"
                    android:textColor="#eb554d"
                    android:textSize="13sp"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/shu_line1_img"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:background="#cccccc" />

            <ImageView
                android:id="@+id/status_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/apply_status1" />

            <ImageView
                android:id="@+id/shu_line2_img"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/status_img"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:background="#cccccc" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/last_line_img"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:background="#cccccc" />

</LinearLayout>