<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fangkuai_grayline_whitebg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp" >

        <TextView
            android:id="@+id/daikuan_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="个人消费贷"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_margin"
            android:background="@drawable/commit_success_ico" 
            android:textSize="@dimen/desc_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/page_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="贷款金额："
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:id="@+id/daikuan_salary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0万元"
            android:textColor="@color/orange_red_text"
            android:textSize="@dimen/title_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="; 贷款期限："
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_size" />

        <TextView
            android:id="@+id/daikuan_term_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="24个月"
            android:textColor="@color/orange_red_text"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/apply_time_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/right_margin"
        android:gravity="right|center_vertical"
        android:text="申请时间：2015-09-02"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/desc_size" />

</LinearLayout>