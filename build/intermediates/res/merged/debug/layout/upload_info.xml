<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    android:orientation="vertical" >

    <include layout="@layout/headview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:text="贷款申请提交成功"
        android:textColor="#47ad50"
        android:textSize="@dimen/title_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:text="提交身份证明照片，有利于获得经理优先响应。您的所有资料将被严格保密"
        android:textColor="@color/desc_text_color"
        android:textSize="@dimen/desc_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingTop="24dp"
            android:text="手持身份证拍照"
            android:textColor="@color/title_text_color"
            android:textSize="13sp" 
            android:id="@+id/text1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cd_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cd_shili" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:text="示例"
                    android:textColor="#cbcbcb"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/id_exam" 
                    android:id="@+id/exam_img"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="身份证+工牌、工作证、名片、邮箱、前台均可"
            android:textColor="#cbcbcb"
            android:textSize="13sp" 
            android:id="@+id/text2"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/upload_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/corner_orange_red_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即拍照上传"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/unupload_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="暂不拍照上传"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

</LinearLayout>