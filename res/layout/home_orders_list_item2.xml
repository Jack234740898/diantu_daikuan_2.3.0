<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fangkuai_grayline_whitebg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:text="3分钟前"
        android:textColor="@color/time_color"
        android:textSize="@dimen/desc_size" />

    <com.ui.view.CircularImage
        android:id="@+id/head_img"
        android:layout_width="@dimen/head_big_size"
        android:layout_height="@dimen/head_big_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/default_head" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="张**信用贷"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/title_size" />

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@color/line_color"/>
    <LinearLayout
        android:id="@+id/play_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/corner_playaudio"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/voice_play_stop_selected" 
            android:id="@+id/play_img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48'"
            android:id="@+id/length_text"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_size"
            android:layout_gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/see_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="查看详情"
            android:textColor="@color/orange_red_text"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/right_jiantou" />
    </RelativeLayout>

</LinearLayout>