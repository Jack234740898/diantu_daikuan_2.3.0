<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp" >

        <LinearLayout
            android:id="@+id/head_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_white_shape"
            android:orientation="vertical" 
            android:layout_centerVertical="true">

            <com.ui.view.CircularImage
                android:id="@+id/head_img"
                android:layout_width="@dimen/head_mid_size"
                android:layout_height="@dimen/head_mid_size"
                android:layout_margin="1.5dp"
                android:background="@drawable/default_head" />

            <TextView
                android:id="@+id/head_text"
                android:layout_width="@dimen/head_mid_size"
                android:layout_height="@dimen/head_mid_size"
                android:layout_margin="1.5dp"
                android:background="@drawable/circle_white_shape"
                android:gravity="center"
                android:textColor="@color/orange_red_text"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="15/09/22"
                android:textColor="@color/desc_text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/go_to_score_img"
                android:layout_width="64dp"
                android:layout_height="22dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/un_score_img"
                android:text="去评价" 
                android:textSize="@dimen/desc_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/right_ll"
            android:layout_toRightOf="@id/head_ll"
            android:orientation="vertical" 
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="张晓晓"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:text="你什么情况？说话呀！"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/line_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:layout_marginLeft="10dp"
        android:background="@color/line_color" />
</LinearLayout>