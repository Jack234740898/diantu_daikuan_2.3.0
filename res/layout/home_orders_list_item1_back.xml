<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fangkuai_grayline_whitebg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/have_fangkuan" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="3分钟前"
            android:textColor="@color/time_color"
            android:textSize="@dimen/desc_size" />
    </LinearLayout>

    <com.ui.view.CircularImage
        android:id="@+id/head_img"
        android:layout_width="@dimen/head_big_size"
        android:layout_height="@dimen/head_big_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/default_head" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/salary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="1000元"
        android:textColor="@color/salary_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/salary_text_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="贷款金额"
        android:textColor="@color/desc_text_color"
        android:textSize="@dimen/desc_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@color/line_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/not_voice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/fangkuai_grayline_whitebg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="北京市"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="城市"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/fangkuai_grayline_whitebg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="有房"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="名下房产"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/fangkuai_grayline_whitebg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="无车"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="名下车辆"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/fangkuai_grayline_whitebg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="￥8000"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="月收入"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fangkuai_grayline_whitebg"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/play_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/corner_playaudio"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/play_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/voice_play_stop_selected" />

            <TextView
                android:id="@+id/length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:text="48&apos;"
                android:textColor="@color/desc_text_color"
                android:textSize="@dimen/desc_size" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/see_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="查看详情"
            android:textColor="@color/orange_red_text"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/right_jiantou" />
    </RelativeLayout>

</LinearLayout>