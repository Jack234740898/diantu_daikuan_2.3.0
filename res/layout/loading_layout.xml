<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.ui.view.ProgressBar
        android:id="@+id/progressbar"
        style="@style/progress_bar_circle"
        android:layout_width="@dimen/head_mid_size"
        android:layout_height="@dimen/head_mid_size"
        android:layout_gravity="center"/>

    <com.ui.view.CircularImage 
        android:layout_width="@dimen/head_big_size"
        android:layout_height="@dimen/head_big_size"
        android:id="@+id/no_data_img"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/loading_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/desc_text_color"
        android:text="正在努力为您加载中..." 
        android:textSize="@dimen/desc_size"/>

</LinearLayout>