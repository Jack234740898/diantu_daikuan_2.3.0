<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/headview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:text="您是否可以做抵押贷款？"
        android:textColor="@color/desc_text_color"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="抵押贷款金额大"
        android:textColor="@color/orange_red_text"
        android:textSize="@dimen/title_size" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/guarantee_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <View
            android:layout_width="15dp"
            android:layout_height="20dp" 
            android:id="@+id/divider_view"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/diya_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_orange_red_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="可以做抵押"
            android:textColor="@color/white"
            android:textSize="@dimen/desc_size"
            android:gravity="center_horizontal" 
            android:layout_toLeftOf="@id/divider_view"/>

        <TextView
            android:id="@+id/no_diya_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_no_diya_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:text="不做抵押"
            android:textColor="@color/white"
            android:textSize="@dimen/desc_size"
            android:layout_toRightOf="@id/divider_view" 
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/ignore_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:padding="30dp"
        android:text="跳过这一步 >>"
        android:textColor="@color/desc_text_color"
        android:textSize="@dimen/desc_size" />

</LinearLayout>